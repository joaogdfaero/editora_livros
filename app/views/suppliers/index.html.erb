<p id="notice"><%= notice %></p>

<%= form_tag( suppliers_path, method: :get ) do %>
  <p>
    Filtrar por:
    <%= radio_button_tag 'search_type', 'name', true %>
    Nome
    <%= text_field_tag 'search', nil, placeholder: 'Digite o texto...' %>
    <%= submit_tag "Filtrar" %>
  </p>
<% end %>

<h1>Suppliers</h1>

<div id="suppliers">
  <% @suppliers.each do |supplier| %>
    <%= render supplier %>
    <p>
      <%= link_to "Show this supplier", supplier %>
    </p>
  <% end %>
</div>

<%= link_to "New supplier", new_supplier_path %>
